FROM ubuntu:latest

# Install dependencies
RUN apt -y update && \
    apt -y install \
        make \
        gcc \
        g++ \
        cmake \
        git \
        pkg-config \
        curl \
        zip \
        unzip \
        tar \
        linux-libc-dev

WORKDIR /app
COPY . .

RUN ./install_vcpkg.sh

# Build the server
RUN rm -rf build && \
    mkdir -p build && \
    cd build && \
    cmake .. && \
    make -j server

# Expose ports (TCP + UDP)
EXPOSE 8081/tcp
EXPOSE 8081/udp

# Run the server
CMD ["./r-type_server"]